# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.js]
indent_size = 2

[*.bat]
indent_style = tab
end_of_line = crlf

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.toml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
